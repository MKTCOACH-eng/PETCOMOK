generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/petcom/nextjs_space/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pets         Pet[]
  orders       Order[]
  preferences  UserPreferences?

  @@map("users")
}

model Pet {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String
  breed     String?
  age       Int?
  weight    Float?
  photoUrl  String?
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("pets")
  @@index([userId])
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@map("categories")
}

model Product {
  id                   String   @id @default(cuid())
  name                 String
  description          String   @db.Text
  price                Float
  compareAtPrice       Float?   // Precio tachado (antes)
  costPrice            Float?   // Costo del producto (dropshipping)
  imageUrl             String
  images               String[] @default([])
  categoryId           String
  petTypes             String[]
  stock                Int      @default(0)
  sku                  String?  @unique
  barcode              String?
  weight               Float?   // En gramos
  featured             Boolean  @default(false)
  isActive             Boolean  @default(true)
  tags                 String[] @default([])
  taxRate              Float    @default(16) // IVA México 16%
  taxIncluded          Boolean  @default(true)
  
  // Dropshipping fields
  isDropshipping       Boolean  @default(false)
  supplierId           String?
  supplierSku          String?
  supplierPrice        Float?
  supplierUrl          String?
  marginPercent        Float?
  autoSync             Boolean  @default(false)
  
  recommendationReason String?  @db.Text
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
  supplier   Supplier?   @relation(fields: [supplierId], references: [id])

  @@map("products")
  @@index([categoryId])
  @@index([featured])
  @@index([sku])
  @@index([supplierId])
}

model Supplier {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  website     String?
  apiKey      String?
  apiUrl      String?
  notes       String?  @db.Text
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]

  @@map("suppliers")
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  status          String   @default("pending")
  total           Float
  subtotal        Float
  discount        Float    @default(0)
  shippingCost    Float    @default(0)
  shippingAddress String?  @db.Text
  shippingName    String?
  shippingPhone   String?
  shippingEmail   String?
  shippingCity    String?
  shippingState   String?
  shippingZipCode String?
  couponCode      String?
  stripePaymentId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user     User        @relation(fields: [userId], references: [id])
  items    OrderItem[]
  shipment Shipment?

  @@map("orders")
  @@index([userId])
  @@index([status])
}

model Shipment {
  id              String    @id @default(cuid())
  orderId         String    @unique
  
  // Carrier info
  carrier         String    // fedex, dhl, estafeta, redpack, etc.
  carrierName     String    // Nombre display
  serviceType     String    // express, standard, economy
  serviceName     String    // Nombre del servicio
  
  // Tracking
  trackingNumber  String?
  trackingUrl     String?
  labelUrl        String?   // URL de la etiqueta PDF
  
  // Costs
  shippingCost    Float
  insuranceCost   Float     @default(0)
  totalCost       Float
  
  // Dimensions & weight
  weight          Float?    // kg
  length          Float?    // cm
  width           Float?    // cm
  height          Float?    // cm
  
  // Status tracking
  status          String    @default("pending") // pending, label_created, picked_up, in_transit, out_for_delivery, delivered, exception, returned
  statusHistory   Json      @default("[]")
  estimatedDelivery DateTime?
  deliveredAt     DateTime?
  
  // Envia.com reference
  enviaShipmentId String?   // ID de envío en Envia.com
  enviaRateId     String?   // ID de cotización seleccionada
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("shipments")
  @@index([trackingNumber])
  @@index([status])
  @@index([carrier])
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
  @@index([orderId])
}

model Coupon {
  id            String    @id @default(cuid())
  code          String    @unique
  discountType  String
  discountValue Float
  minPurchase   Float?    @default(0)
  maxUses       Int?
  usedCount     Int       @default(0)
  expiresAt     DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("coupons")
  @@index([code])
}

model Article {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  excerpt         String?  @db.Text
  content         String   @db.Text
  imageUrl        String?
  author          String?
  
  // Content type: article, video, tip
  contentType     String   @default("article")
  
  // Video fields
  videoUrl        String?  // YouTube, Vimeo, etc.
  videoDuration   String?  // "5:30" format
  
  // Categorization
  category        String   @default("general") // tips, nutrition, health, grooming, training
  petType         String?  // perro, gato, all
  tags            String[] @default([])
  
  relatedProducts String[] @default([])
  featured        Boolean  @default(false)
  published       Boolean  @default(false)
  viewCount       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("articles")
  @@index([slug])
  @@index([published])
  @@index([contentType])
  @@index([category])
  @@index([featured])
}

model UserPreferences {
  id                   String   @id @default(cuid())
  userId               String   @unique
  activePetId          String?
  emailNotifications   Boolean  @default(true)
  recommendations      Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Subscriber {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  isActive      Boolean   @default(true)
  source        String    @default("footer") // footer, popup, checkout
  tags          String[]  @default([])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("subscribers")
  @@index([email])
  @@index([isActive])
}

// ========================================
// MÓDULO DE PROVEEDORES DE SERVICIOS
// ========================================

model ServiceCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  icon        String?  // lucide icon name
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  providers ServiceProvider[]

  @@map("service_categories")
  @@index([slug])
  @@index([isActive])
}

model ServiceProvider {
  id              String   @id @default(cuid())
  
  // Datos básicos
  businessName    String
  slug            String   @unique
  description     String   @db.Text
  shortDescription String?
  logoUrl         String?
  coverImageUrl   String?
  images          String[] @default([])
  
  // Categoría
  categoryId      String
  
  // Ubicación
  address         String?
  city            String?
  state           String?
  zipCode         String?
  latitude        Float?
  longitude       Float?
  serviceArea     String?  // "CDMX y Zona Metropolitana"
  
  // Contacto
  contactName     String
  email           String
  phone           String
  whatsapp        String?
  website         String?
  facebook        String?
  instagram       String?
  
  // Membresía
  membershipStatus  String   @default("pending") // pending, active, expired, cancelled
  membershipPrice   Float    @default(299)
  membershipStartDate DateTime?
  membershipEndDate   DateTime?
  stripeSubscriptionId String?
  
  // Estadísticas y ranking
  totalLeads      Int      @default(0)
  totalViews      Int      @default(0)
  totalReviews    Int      @default(0)
  averageRating   Float    @default(0)
  featured        Boolean  @default(false)
  
  // Servicios ofrecidos (JSON array)
  services        Json     @default("[]") // [{name, description, price, duration}]
  
  // Horarios
  schedule        Json     @default("{}") // {monday: {open: "09:00", close: "18:00"}, ...}
  
  // Estado
  isApproved      Boolean  @default(false)
  isActive        Boolean  @default(true)
  approvedAt      DateTime?
  approvedBy      String?
  rejectionReason String?
  
  // Auth
  password        String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category ServiceCategory @relation(fields: [categoryId], references: [id])
  leads    ServiceLead[]
  reviews  ServiceReview[]

  @@map("service_providers")
  @@index([categoryId])
  @@index([slug])
  @@index([membershipStatus])
  @@index([isApproved])
  @@index([averageRating])
  @@index([totalLeads])
}

model ServiceLead {
  id              String   @id @default(cuid())
  providerId      String
  
  // Datos del cliente interesado
  customerName    String
  customerEmail   String
  customerPhone   String?
  petType         String?  // perro, gato, etc.
  petName         String?
  message         String?  @db.Text
  
  // Servicio de interés
  serviceInterest String?
  
  // Estado
  status          String   @default("new") // new, contacted, converted, lost
  notes           String?  @db.Text
  
  // Tracking
  source          String   @default("web") // web, whatsapp, phone
  viewedAt        DateTime?
  contactedAt     DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  provider ServiceProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@map("service_leads")
  @@index([providerId])
  @@index([status])
  @@index([createdAt])
}

model ServiceReview {
  id              String   @id @default(cuid())
  providerId      String
  
  // Autor
  authorName      String
  authorEmail     String?
  
  // Review
  rating          Int      // 1-5
  title           String?
  comment         String   @db.Text
  
  // Moderación
  isApproved      Boolean  @default(false)
  isVisible       Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  provider ServiceProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@map("service_reviews")
  @@index([providerId])
  @@index([isApproved])
  @@index([rating])
}
